<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="gamification.infrastructure.data_transformer.api.domain.entity.user.user_api_data_transformer"
                 class="Infrastructure\DataTransformer\Api\Domain\Entity\User\UserApiDataTransformer">
        </service>

        <service id="gamification.infrastructure.data_transformer.api.domain.entity.image.image_api_data_transformer"
                 class="Infrastructure\DataTransformer\Api\Domain\Entity\Image\ImageApiDataTransformer">
            <argument type="service" id="gamification.infrastructure.services.domain.image_manager.disk_image_manager" />
        </service>

        <service id="gamification.infrastructure.data_transformer.api.domain.entity.badge.badge_api_data_transformer"
                 class="Infrastructure\DataTransformer\Api\Domain\Entity\Badge\BadgeApiDataTransformer">
            <argument type="service" id="gamification.infrastructure.data_transformer.api.domain.entity.image.image_api_data_transformer" />
            <argument type="service" id="gamification.infrastructure.data_transformer.api.domain.entity.user.user_api_data_transformer" />
        </service>

        <service id="gamification.infrastructure.data_transformer.api.domain.entity.badge.badge_api_collection_data_transformer"
                 class="Infrastructure\DataTransformer\Api\Domain\Entity\Badge\BadgeApiCollectionDataTransformer">
            <argument type="service" id="gamification.infrastructure.data_transformer.api.domain.entity.badge.badge_api_data_transformer" />
        </service>
    </services>

</container>