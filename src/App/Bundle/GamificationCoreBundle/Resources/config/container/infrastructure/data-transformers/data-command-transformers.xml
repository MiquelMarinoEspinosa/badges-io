<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="gamification.infrastructure.data_transformer.command.domain.entity.user.user_command_data_transformer"
                 class="Infrastructure\DataTransformer\Command\Domain\Entity\User\UserCommandDataTransformer">
        </service>

        <service id="gamification.infrastructure.data_transformer.command.domain.entity.image.image_command_data_transformer"
                 class="Infrastructure\DataTransformer\Command\Domain\Entity\Image\ImageCommandDataTransformer">
            <argument type="service" id="gamification.infrastructure.services.domain.image_manager.disk_image_manager" />
        </service>

        <service id="gamification.infrastructure.data_transformer.command.domain.entity.badge.badge_command_data_transformer"
                 class="Infrastructure\DataTransformer\Command\Domain\Entity\Badge\BadgeCommandDataTransformer">
            <argument type="service" id="gamification.infrastructure.data_transformer.command.domain.entity.image.image_command_data_transformer" />
            <argument type="service" id="gamification.infrastructure.data_transformer.command.domain.entity.user.user_command_data_transformer" />
        </service>

        <service id="gamification.infrastructure.data_transformer.command.domain.entity.badge.badge_command_collection_data_transformer"
                 class="Infrastructure\DataTransformer\Command\Domain\Entity\Badge\BadgeCommandCollectionDataTransformer">
            <argument type="service" id="gamification.infrastructure.data_transformer.command.domain.entity.badge.badge_command_data_transformer" />
        </service>
    </services>

</container>