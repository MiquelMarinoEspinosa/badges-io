Vagrant.configure(2) do |config|
  config.vm.define "badges-io-dev"
    config.vm.box = "chef/debian-7.8"
    config.vm.hostname = "badges-io-dev"
    config.vm.network 'private_network', ip: '172.21.99.4'
    config.vm.synced_folder '.', '/var/deployments/badges-io/releases/1', owner: 'www-data', group: 'www-data', type: 'rsync', rsync__auto: false, rsync__exclude: %w(.git/ .vagrant/ .idea/), rsync__args: %w(-azv --delete)

    config.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
    end

    config.vm.provision "ansible" do |ansible|
      ansible.extra_vars = {
        hostname: "badges-io-dev"
      }
      ansible.playbook = "environment/devel/provision/ansible/playbooks/playbook.yml"
    end
end
